<Window x:Class="Freshly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Freshly"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        
        >
    <Border Background="#CCC5B9"
            CornerRadius="6">
        <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160px" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
                <RowDefinition Height="50px" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <Border Background="#CCC5B9" CornerRadius="6, 0, 0, 0" MouseDown="Border_MouseDown"/>
            </Grid>
            
            <Grid Grid.Column="1" >
                <Border CornerRadius="0, 6, 0, 0" Background="#CCC5B9" MouseDown="Border_MouseDown" />
            </Grid>
            
            
    </Grid>
    </Border>
</Window>
