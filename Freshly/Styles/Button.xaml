<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BtnStyle" TargetType="RadioButton">

        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">

                    <Border x:Name="border"
                        Height="40"
                        Width="160"
                        BorderThickness="0"
                        Margin="6, 12, 6, 0"
                        CornerRadius="12">

                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground" Color="#EB5E28" />
                        </Border.Background>

                        <Grid>

                            <Border x:Name="Indicator" 
                                Height="18" Width="2" 
                                Margin="6, 0, 4, 0"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                Background="#252422"
                                Visibility="Collapsed"
                                CornerRadius="1"/>

                            <ContentPresenter/>

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                             Value="True">


                            <Setter Property="Visibility"
                                TargetName="Indicator"
                                Value="Collapsed"/>
                        </Trigger>

                        <EventTrigger RoutedEvent="Border.MouseEnter"
                                  SourceName="border" >
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                Storyboard.TargetProperty="Color"
                                                From="#EB5E28"
                                                To="#EE7749"
                                                Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" 
                                  SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                Storyboard.TargetProperty="Color"
                                                From="#EE7749"
                                                To="#EB5E28"
                                                Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>
                        <Trigger Property="IsChecked"
                             Value="True">

                            <Setter Property="Background"
                                TargetName="border"
                                Value="#cd4713" />

                            <Setter Property="Visibility"
                                TargetName="Indicator"
                                Value="Collapsed" />

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="WindowControlButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="2, 2, 0, 0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="BtnSectionStyle" TargetType="RadioButton">

        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">

                    <Border x:Name="border"
                        Height="40"
                        Width="160"
                        BorderThickness="0"
                        Margin="6, 12, 6, 0"
                        CornerRadius="12">

                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground" Color="#EB5E28" />
                        </Border.Background>

                        <Grid>

                            <Border x:Name="Indicator" 
                                Height="18" Width="2" 
                                Margin="6, 0, 4, 0"
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                Background="#252422"
                                Visibility="Collapsed"
                                CornerRadius="1"/>

                            <ContentPresenter Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <Image x:Name="Arrow" 
                               Source="pack://application:,,,/Images/ArrowIcon.png"
                               Width="12" 
                               Height="12" 
                               Margin="0,0,16,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <RotateTransform x:Name="ArrowRotation" Angle="0"/>
                                </Image.RenderTransform>
                            </Image>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                             Value="True">


                            <Setter Property="Visibility"
                                TargetName="Indicator"
                                Value="Collapsed"/>
                        </Trigger>

                        <EventTrigger RoutedEvent="Border.MouseEnter"
                                  SourceName="border" >
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                Storyboard.TargetProperty="Color"
                                                From="#EB5E28"
                                                To="#EE7749"
                                                Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" 
                                  SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                Storyboard.TargetProperty="Color"
                                                From="#EE7749"
                                                To="#EB5E28"
                                                Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>
                        <Trigger Property="IsChecked"
                             Value="True">

                            <Setter Property="Background"
                                TargetName="border"
                                Value="#cd4713" />

                            <Setter Property="Visibility"
                                TargetName="Indicator"
                                Value="Collapsed" />

                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="ArrowRotation" 
                                        Storyboard.TargetProperty="Angle"
                                        From="0" 
                                        To="90" 
                                        Duration="0:0:0.2"
                                        AccelerationRatio="0.3"
                                        DecelerationRatio="0.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                        Storyboard.TargetName="ArrowRotation" 
                                        Storyboard.TargetProperty="Angle"
                                        From="90" 
                                        To="0" 
                                        Duration="0:0:0.1"
                                        AccelerationRatio="0.3"
                                        DecelerationRatio="0.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>


    </Style>
    <Style x:Key="SubBtnStyle" TargetType="RadioButton">

        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">

                    <Border x:Name="border"
                    Height="30"
                    Width="140"
                    BorderThickness="0"
                    Margin="0, 5, 0, 0"
                    CornerRadius="12">

                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground" Color="#EB5E28" />
                        </Border.Background>

                        <Grid>

                            <Border x:Name="Indicator" 
                            Height="6" Width="6"
                            Margin="6, 0, 0 ,0"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            Background="#252422"
                            Visibility="Collapsed"
                            CornerRadius="20"/>

                            <ContentPresenter/>

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                         Value="True">


                            <Setter Property="Visibility"
                            TargetName="Indicator"
                            Value="Visible"/>
                        </Trigger>

                        <EventTrigger RoutedEvent="Border.MouseEnter"
                              SourceName="border" >
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                            Storyboard.TargetProperty="Color"
                                            From="#EB5E28"
                                            To="#EE7749"
                                            Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" 
                              SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                            Storyboard.TargetProperty="Color"
                                            From="#EE7749"
                                            To="#EB5E28"
                                            Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>
                        <Trigger Property="IsChecked"
                         Value="True">

                            <Setter Property="Background"
                            TargetName="border"
                            Value="#cd4713" />

                            <Setter Property="Visibility"
                            TargetName="Indicator"
                            Value="Visible" />

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


    <Style x:Key="CreateBtnStyle" TargetType="RadioButton">

        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">

                    <Border x:Name="border"
                Height="50"
                Width="150"
                BorderThickness="0"
                Margin="8, 4, 8, 4"
                CornerRadius="8">

                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground" Color="#2D6813" />
                        </Border.Background>
                    </Border>

                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Border.MouseEnter"
                          SourceName="border" >
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                        Storyboard.TargetProperty="Color"
                                        From="#2D6813"
                                        To="#23510F"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" 
                          SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                        Storyboard.TargetProperty="Color"
                                        From="#23510F"
                                        To="#2D6813"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseDown"
                                  SourceName="border">



                        </EventTrigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>