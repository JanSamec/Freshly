                        <EventTrigger RoutedEvent="Border.MouseEnter"
                              SourceName="border" >
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                            Storyboard.TargetProperty="Color"
                                            From="#EB5E28"
                                            To="#EE7749"
                                            Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" 
                              SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                            Storyboard.TargetProperty="Color"
                                            From="#EE7749"
                                            To="#EB5E28"
                                            Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>
                        <Trigger Property="IsChecked"
                         Value="True">

                            <Setter Property="Background"
                            TargetName="border"
                            Value="#FD5B1E" />

                            <Setter Property="Visibility"
                            TargetName="Indicator"
                            Value="Visible" />

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


    <Style x:Key="CreateBtnStyle" TargetType="RadioButton">

        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">

                    <Border x:Name="border"
                Height="50"
                Width="150"
                BorderThickness="0"
                Margin="8, 4, 8, 4"
                CornerRadius="8">

                        <Border.Background>
                            <SolidColorBrush x:Name="BorderBackground" Color="#2D6813" />
                        </Border.Background>
                    </Border>

                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Border.MouseEnter"
                          SourceName="border" >
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                        Storyboard.TargetProperty="Color"
                                        From="#2D6813"
                                        To="#23510F"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" 
                          SourceName="border">

                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                        Storyboard.TargetProperty="Color"
                                        From="#23510F"
                                        To="#2D6813"
                                        Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseDown"
                                  SourceName="border">



                        </EventTrigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>