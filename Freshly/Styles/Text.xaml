<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Text_Style"
       TargetType="TextBlock">

        <Setter Property="FontFamily"
            Value="pack://application:,,,/Freshly;component/Fonts/#Lexend Light" />
        <Setter Property="VerticalAlignment"
            Value="Center" />
        <Setter Property="HorizontalAlignment"
            Value="Left" />
        <Setter Property="Foreground"
            Value="#252422" />
        <Setter Property="FontSize"
            Value="15" />
        <Setter Property="Margin"
            Value="20,0,0,0" />

    </Style>

    <Style x:Key="SubText_Style"
   TargetType="TextBlock">

        <Setter Property="FontFamily"
        Value="pack://application:,,,/Freshly;component/Fonts/#Lexend Light" />
        <Setter Property="VerticalAlignment"
        Value="Center" />
        <Setter Property="HorizontalAlignment"
        Value="Left" />
        <Setter Property="Foreground"
        Value="#252422" />
        <Setter Property="FontSize"
        Value="12" />
        <Setter Property="Margin"
        Value="24,0,0,0" />

    </Style>


    <Style x:Key="Title_Style"
       TargetType="TextBlock">

        <Setter Property="FontFamily"
            Value="pack://application:,,,/Fonts/static/#Lexend Bold" />
        <Setter Property="VerticalAlignment"
            Value="Center" />
        <Setter Property="HorizontalAlignment"
            Value="Left" />
        <Setter Property="Foreground"
            Value="#252422" />
        <Setter Property="FontSize"
            Value="24" />
        <Setter Property="Margin"
            Value="56,10,0,0" />

    </Style>
</ResourceDictionary>